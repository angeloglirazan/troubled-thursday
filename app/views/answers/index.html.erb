<div class="page-header">
  <%= link_to new_answer_path, :class => 'btn btn-primary' do %>
    <i class="icon-plus icon-white"></i>
    New Answer
  <% end %>
  <h1>Listing answers</h1>
</div>

<table class="table table-bordered table-striped">
  <thead>
    <tr>
      <th>Text</th>
      <th>User</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
<% @answers.each do |answer| %>
    <tr>
      <td><%= answer.text %></td>
      <td><%= answer.user_id %></td>
      <td><%= link_to 'Show', answer %></td>
      <td><%= link_to 'Edit', edit_answer_path(answer) %></td>
      <td><%= link_to 'Destroy', answer, data: { confirm: 'Are you sure?' }, method: :delete %></td>
    </tr>
<% end %>
  </tbody>
</table>
